<?php

namespace {{ theme_namespace }}\Providers;

use function {{theme_namespace}}\helpers\config;

class MenusProvider
{
  public static function boot()
  {
    add_action('after_setup_theme', [self::class, 'register']);
  }

  public static function register()
  {
    $menus  = config('menus');

    foreach ($menus as $menu) {
      register_nav_menu(...$menu);
    }
  }
}
