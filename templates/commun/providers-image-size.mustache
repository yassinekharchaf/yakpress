<?php

namespace {{ theme_namespace }}\Providers;

use function {{theme_namespace}}\helpers\config;

class ImageSizesProvider
{
  public static function boot()
  {
    add_action('after_setup_theme', [self::class, 'add']);
  }

  public static function add()
  {
    $isizes  = config('image-size');

    foreach ($isizes as $isize) {
      add_image_size(...$isize);
    }
  }
}
